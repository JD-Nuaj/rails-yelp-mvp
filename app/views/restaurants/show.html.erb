<div class="container">
  <h1 class="my-4"><%= @restaurant.name %></h1>

  <div class="mb-3">
    <p><%= @restaurant.address %></p>
    <p>Category: <%= @restaurant.category %></p>
  </div>

  <h2 class="my-2">Reviews</h2>

  <div class="mb-3">
    <%= link_to "Add a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <ul>
      <% @reviews.each do |review| %>
      <li>
        <strong>Rating:</strong> <%= review.rating %>
        <p><%= review.content %></p>
      </li>
      <% end %>
    </ul>
  </div>
  
  <div>
    <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
  </div>
</div>
